<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal de Noticias FMU| Portal FMU</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div style="background-color : red" >
            <div class="text-center ">
                <h1 style="color:antiquewhite">FMU</h1>
                <h3 style="color:antiquewhite">CENTRO UNIVERSITARIO</h3>
            </div>
    </div>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar">
                    @Html.ActionLink("Inicio", "Index", "Noticias", null, new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
    


    <div class="row">
        <div class="col-md-9">
            @RenderBody()
        </div>

        <div class=" col-lg-3">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <p class=" panel-title">Busca Noticias</p>
                </div>
                <div class=" panel-body">
                    @using (Html.BeginForm("Busca", "Noticias", FormMethod.Get))
                    {
                        <input type="text" class="form-control" name="texto" placeholder="Buscar por ..." />
                    }
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Faculdades Metropolitas Unidas</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>